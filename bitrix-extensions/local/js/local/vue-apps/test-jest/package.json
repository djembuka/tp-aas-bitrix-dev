{
  "name": "test-jest",
  "version": "1.0.0",
  "description": "Jest test for Vue application",
  "main": "src/loader.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^ui\\.vue3$": "<rootDir>/__mocks__/ui.vue3.js",
      "^ui\\.vue3\\.pinia$": "<rootDir>/__mocks__/ui.vue3.pinia.js"
    }
  }
}
